{
  "ConnectionStrings": {
    "MonitoringDb": "Server=YOUR_SQL_SERVER;Database=msdb;User Id=sa;Password=Your_password123;TrustServerCertificate=true;"
  },
  "Checks": [
    {
      "Id": "etl-daily-sales",
      "Type": "sql-agent-job",
      "Name": "ETL: Daily Sales",
      "Cron": "*/2 * * * *",
      "Parameters": {
        "connectionString": "{ConnectionStrings:MonitoringDb}",
        "jobName": "ETL: Daily Sales",
        "historyCount": "30"
      },
      "Tags": [
        "nightly",
        "sales"
      ],
      "Enabled": true
    },
    {
      "Id": "http-github",
      "Type": "http",
      "Name": "HTTP: Github API",
      "IntervalSeconds": 60,
      "Parameters": {
        "url": "https://api.github.com/",
        "timeoutMs": "8000"
      },
      "Tags": [
        "http",
        "public"
      ],
      "Enabled": true
    },
    {
      "Id": "db-primary",
      "Type": "db-connection",
      "Name": "DB: Primary",
      "IntervalSeconds": 120,
      "Parameters": {
        "connectionString": "{ConnectionStrings:MonitoringDb}",
        "testQuery": "SELECT 1"
      },
      "Tags": [
        "database"
      ],
      "Enabled": true
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}