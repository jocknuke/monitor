{
  "ConnectionStrings": {
    "MonitoringDb": "Server=YOUR_SQL_SERVER;Database=msdb;User Id=sa;Password=Your_password123;TrustServerCertificate=true;"
  },
  "Checks": [
    {
      "Id": "etl-daily-sales",
      "Type": "sql-agent-job",
      "Name": "ETL: Daily Sales",
      "Cron": "*/2 * * * *",
      "Parameters": {
        "connectionString": "{ConnectionStrings:MonitoringDb}",
        "jobName": "ETL: Daily Sales",
        "historyCount": "30"
      },
      "Tags": [
        "nightly",
        "sales"
      ],
      "Enabled": true
    },
    {
      "Id": "http-github",
      "Type": "http",
      "Name": "HTTP: Github API",
      "IntervalSeconds": 60,
      "Parameters": {
        "url": "https://api.github.com/",
        "timeoutMs": "8000"
      },
      "Tags": [
        "http",
        "public"
      ],
      "Enabled": true
    },
    {
      "Id": "db-primary",
      "Type": "db-connection",
      "Name": "DB: Primary",
      "IntervalSeconds": 120,
      "Parameters": {
        "connectionString": "{ConnectionStrings:MonitoringDb}",
        "testQuery": "SELECT 1"
      },
      "Tags": [
        "database"
      ],
      "Enabled": true
    },
    {
  "Id": "etl-balance-oracle",
  "Type": "oracle-balance",
  "Name": "ETL: Source vs Target TALLY_AMOUNT",
  "Cron": "0 3 * * *",
  "Parameters": {
    "sourceConnection": "Data Source=SRC;User Id=ETL_SRC;Password=***;",
    "targetConnection": "Data Source=TGT;User Id=ETL_TGT;Password=***;",
    "sourceQuery": "SELECT SUM(TALLY_AMOUNT) FROM SRC_TABLE WHERE ETL_DATE = TRUNC(SYSDATE)",
    "targetQuery": "SELECT SUM(TALLY_AMOUNT) FROM TGT_TABLE WHERE LOAD_DATE = TRUNC(SYSDATE)",
    "tolerancePct": "0.5"
  },
  "Tags": [ "oracle", "etl", "reconciliation" ],
  "Enabled": true
}

  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}