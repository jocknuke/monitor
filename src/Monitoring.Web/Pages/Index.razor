
@page "/"
@inject ICheckStore CheckStore
@inject IResultStore ResultStore

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5">Monitored Checks</MudText>
    <MudTable Items="_rows" Dense="true" Hover="true">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Type</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Message</MudTh>
            <MudTh>Last Updated</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Type</MudTd>
            <MudTd>
                @if (_latest.TryGetValue(context.Id, out var last))
                {
                    @switch(last.Status)
                    {
                        case CheckStatus.Healthy: @<MudChip T="string" Color="Color.Success">Healthy</MudChip>; break;
                        case CheckStatus.Degraded: @<MudChip T="string" Color="Color.Warning">Degraded</MudChip>; break;
                        case CheckStatus.Unhealthy: @<MudChip T="string" Color="Color.Error">Unhealthy</MudChip>; break;
                        default: @<MudChip T="string">Unknown</MudChip>; break;
                    }
                }
                else
                {
                    <MudChip T="string">No data</MudChip>
                }
            </MudTd>
            <MudTd>@(_latest.TryGetValue(context.Id, out var r) ? r.Message : "")</MudTd>
            <MudTd>@(_latest.TryGetValue(context.Id, out var r2) ? r2.ObservedAt.ToLocalTime().ToString("g") : "")</MudTd>
            <MudTd>
                <MudButton Variant="Variant.Text" Href=$"/job/{context.Id}">Details</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    private List<CheckDescriptor> _rows = new();
    private Dictionary<string, CheckResult> _latest = new();

    protected override async Task OnInitializedAsync()
    {
        _rows = (await CheckStore.ListAsync()).ToList();
        foreach (var c in _rows)
        {
            var last = await ResultStore.GetLatestAsync(c.Id);
            if (last is not null) _latest[c.Id] = last;
        }
    }
}
