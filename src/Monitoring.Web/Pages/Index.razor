
@page "/"
@inject ICheckStore CheckStore
@inject IResultStore ResultStore

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5">Monitored Checks</MudText>
    <MudTable Items="_rows" Dense="true" Hover="true">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Type</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Message</MudTh>
            <MudTh>Last Updated</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Type</MudTd>
            <MudTd>
                @if (_latest.TryGetValue(context.Id, out var last)) {
                    @if (last.Status == CheckStatus.Healthy) { <MudChip T="string" Color="Color.Success">Healthy</MudChip> }
                    else if (last.Status == CheckStatus.Degraded) { <MudChip T="string" Color="Color.Warning">Degraded</MudChip> }
                    else if (last.Status == CheckStatus.Unhealthy) { <MudChip T="string" Color="Color.Error">Unhealthy</MudChip> }
                    else { <MudChip T="string">Unknown</MudChip> }
                } else {
                    <MudChip T="string">No data</MudChip>
                }
            </MudTd>
            <MudTd>@(_latest.TryGetValue(context.Id, out var r) ? r.Message : "")</MudTd>
            <MudTd>@(_latest.TryGetValue(context.Id, out var r2) ? r2.ObservedAt.ToLocalTime().ToString("g") : "")</MudTd>
            <MudTd>
                <MudButton Variant="Variant.Text" Href=$"/job/{context.Id}">Details</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>
