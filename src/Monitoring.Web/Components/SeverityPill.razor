@namespace Monitoring.Web.Components
@using Monitoring.Web.Models

<span style="padding:2px 6px;border-radius:4px;color:white;background-color:@GetColor();font-size:0.75rem;">
    @Severity.ToString()
</span>

@code {
    [Parameter] public IncidentSeverity Severity { get; set; }

    private string GetColor() => Severity switch
    {
        IncidentSeverity.P1 => "#f44336",
        IncidentSeverity.P2 => "#ff9800",
        IncidentSeverity.P3 => "#2196f3",
        _ => "#9e9e9e"
    };
}
