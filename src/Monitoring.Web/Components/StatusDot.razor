@namespace Monitoring.Web.Components
@using Monitoring.Web.Models

<span style="display:inline-block;width:12px;height:12px;border-radius:50%;background-color:@GetColor();margin-right:4px;"></span>

@code {
    [Parameter] public string Status { get; set; } = "Healthy";

    private string GetColor() => Status switch
    {
        "Healthy" => "#4caf50",
        "Degraded" => "#ff9800",
        // Treat both "Down" and "Unhealthy" as red because they indicate
        // critical failure conditions.
        "Down" or "Unhealthy" => "#f44336",
        _ => "#9e9e9e"
    };
}
